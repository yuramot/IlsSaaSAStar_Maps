unit T_Common;
//------------------------------------------------------------------------------
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
interface

uses
  System.Generics.Collections;

//------------------------------------------------------------------------------
type

//------------------------------------------------------------------------------
//! array of
//------------------------------------------------------------------------------
  TMyBooleanArray = TArray<Boolean>;
  TMyByteArray = TArray<Byte>;
  TMyStringArray = TArray<string>;
  TMyIntegerArray = TArray<Integer>;

//------------------------------------------------------------------------------
//! collections
//------------------------------------------------------------------------------
  TMyByteList = TList<Byte>;

//------------------------------------------------------------------------------
//!
//------------------------------------------------------------------------------
  TWSOneRec = record
    Load: Int64;
    IPAddr: string[15];
    Provider: string[7];
  end;

  TWSOneRecArray = array of TWSOneRec;

//------------------------------------------------------------------------------
//! записи
//------------------------------------------------------------------------------
  TExpWord = packed record
    case Boolean of
      False: (W: UInt16);
      True: (B0, B1: UInt8);
  end;
  TExpDWord = packed record
    case Boolean of
      False: (DW: UInt32);
      True: (W0, W1: TExpWord);
  end;
  TExpQWord = packed record
    case Boolean of
      False: (QW: UInt64);
      True: (DW0, DW1: TExpDWord);
  end;

//------------------------------------------------------------------------------
//! понятные типы
//------------------------------------------------------------------------------
  PUInt8 = PByte;
  PUInt16 = PWord;
  PUInt32 = PLongWord;

//------------------------------------------------------------------------------
//! запись из 2-х Integer'ов
//------------------------------------------------------------------------------
  PIntegerDuo = ^TIntegerDuo;

  TIntegerDuo = record
    A, B: Integer;
  end;

  TIntegerDuoArray = array of TIntegerDuo;

//------------------------------------------------------------------------------
implementation

end.

